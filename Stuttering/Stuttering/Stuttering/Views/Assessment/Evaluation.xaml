<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stuttering.Views.Assessment.Evaluation" 
             xmlns:i18n="clr-namespace:Stuttering.Helper;assembly=Stuttering"
             BackgroundColor="White"
             HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
    <ContentView.Content>
        <ScrollView>
            <StackLayout VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" 
                         Margin="0" Padding="20" >
                <StackLayout Spacing="30">
                    <!--Q1-->
                    <StackLayout Spacing="15">
                        <Label Text="{i18n:Translate self_eva_q1}"
                       HorizontalOptions="CenterAndExpand" FontSize="18" HorizontalTextAlignment="Center"/>
                        <StackLayout Orientation="Horizontal">
                            <Frame Style="{StaticResource RateBtnFrame}">
                                <Button Text="1" Style="{StaticResource RateBtnSelected}" 
                                        x:Name="Q1Btn1" Clicked="Q1Btn_Clicked" CommandParameter="1"/>
                            </Frame>
                            <Frame Style="{StaticResource RateBtnFrame}">
                                <Button Text="2" Style="{StaticResource RateBtn}"
                                        x:Name="Q1Btn2" Clicked="Q1Btn_Clicked" CommandParameter="2"/>
                            </Frame>
                            <Frame Style="{StaticResource RateBtnFrame}">
                                <Button Text="3" Style="{StaticResource RateBtn}"
                                        x:Name="Q1Btn3" Clicked="Q1Btn_Clicked" CommandParameter="3"/>
                            </Frame>
                            <Frame Style="{StaticResource RateBtnFrame}">
                                <Button Text="4" Style="{StaticResource RateBtn}"
                                        x:Name="Q1Btn4" Clicked="Q1Btn_Clicked" CommandParameter="4"/>
                            </Frame>
                        </StackLayout>
                        <BoxView Style="{StaticResource RateSeparator}"/>
                    </StackLayout>
