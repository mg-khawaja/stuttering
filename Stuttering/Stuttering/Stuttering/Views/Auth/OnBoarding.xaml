<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stuttering.Views.Auth.OnBoarding">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White">
            <StackLayout 
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="CenterAndExpand" >
                <ActivityIndicator IsRunning="True" HeightRequest="50" WidthRequest="50" Color="{StaticResource Primary}"/>
                <Label Text="Initializing App... Please wait, don't quit!" HorizontalTextAlignment="Center"
                   x:Name="InitializingText"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>